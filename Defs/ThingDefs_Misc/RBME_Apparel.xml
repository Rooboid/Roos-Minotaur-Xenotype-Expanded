			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>Hellenic</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>
  
